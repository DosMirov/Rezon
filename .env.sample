# .env.sample
# Copy to .env and fill in real values before running

# Telegram bot token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# Telegram chat/channel ID where fragments are sent (e.g. -1001234567890)
CHANNEL_ID=your_channel_id_here

# Path to SQLite database file (relative to project root)
DATABASE_PATH=./rezon.db

# Public URL where Telegram can reach your webhook (no trailing slash)
BASE_WEBHOOK_URL=https://your-domain.example.com

# Webhook path must start with a slash
WEBHOOK_PATH=/webhook
